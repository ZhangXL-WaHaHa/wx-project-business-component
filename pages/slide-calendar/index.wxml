	<button bindtap="showCalendar">单选日历</button>
	<button bindtap="showRangeCalendar" class="usermotto">区间范围选择日历</button>
	<button bindtap="showMultipleCalendar" class="usermotto">多选日历</button>
	
	<!-- 单选弹框 -->
	<van-popup 
		round
		show="{{ show }}" bind:close="onClose" position="bottom">
		<calendar 
			fixRow="{{ false }}" title="选择团期" showRemnantDays="{{ false }}" showHoliday="{{ true }}"
			selectDate="{{selectDate}}" dateText="{{showDataText}}" bind:finishSelectDate="finishSelectDate"></calendar>
	</van-popup>
	
	<!-- 多选弹框 -->
	<van-popup
		round
		show="{{ showMultiple }}" bind:close="onClose" position="bottom">
		<calendar 
			fixRow="{{ true }}" title="选择团期" calendarType="multiple" btnText="立即下单"
			selectDateMultiple="{{selectDateMultiple}}" beginTime="2020-01-01" showHoliday="{{true}}"
			dateText="{{showDataText}}" bind:finishSelectDate="finishSelectDate"></calendar>
	</van-popup>
	
